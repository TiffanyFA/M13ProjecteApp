<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ConfirmFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#9C9C9C"
        android:paddingTop="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_thanks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirm_thanks"
            android:textAllCaps="true"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/tv_info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirm_info_title"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:paddingTop="40dp"
            android:layout_marginStart="4dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ic_icon_calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                app:srcCompat="@android:drawable/ic_menu_my_calendar"
                tools:srcCompat="@android:drawable/ic_menu_my_calendar" />

            <TextView
                android:id="@+id/tv_info_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/confirm_info_time"
                android:layout_marginStart="4dp"
                android:textSize="18sp"
                android:paddingTop="40dp" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_confirm"
            android:text="@string/confirm_btn"
            android:layout_marginTop="300dp"
            android:background="#686868"
            android:textColor="#ffff"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</FrameLayout>