<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ContactActivity"
    android:background="@drawable/cover">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:paddingTop="55dp"
            android:text="@string/contact_name"
            android:textAlignment="center"
            android:textColor="@color/design_default_color_on_primary"
            android:textSize="@android:dimen/notification_large_icon_height"
            android:textStyle="bold"
            tools:text="@string/contact_name" />

        <TextView
            android:id="@+id/tv_tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:paddingTop="45dp"
            android:text="@string/contact_tel"
            android:textAlignment="center"
            android:textColor="@color/design_default_color_on_primary"
            android:textSize="40sp"
            tools:text="@string/contact_tel" />

        <TextView
            android:id="@+id/tv_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="@string/contact_mail"
            android:textAlignment="center"
            android:textColor="@color/design_default_color_on_primary"
            android:textSize="30sp"
            tools:text="@string/contact_mail" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>